# Configuración de Base de Datos PostgreSQL
# ⚠️ NUNCA uses contraseñas débiles como: admin, postgres, password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=catalogo_artesanias
DB_USER=postgres
DB_PASSWORD=GENERA_UNA_CONTRASEÑA_SEGURA

# Configuración del Servidor
PORT=3000
NODE_ENV=development

# JWT - OBLIGATORIO
# Genera uno con: openssl rand -base64 32
# Mínimo 32 caracteres para producción
JWT_SECRET=GENERA_CON_openssl_rand_base64_32

# CORS - URL del frontend (separar por comas si hay varias)
FRONTEND_URL=http://localhost:5173

# Directorio de uploads
UPLOAD_DIR=./uploads

# Admin inicial (solo para create-admin.js)
# Genera contraseña segura para crear el primer admin
ADMIN_USER=admin
ADMIN_EMAIL=admin@ideancestral.com
ADMIN_PASSWORD=GENERA_CONTRASEÑA_SEGURA
